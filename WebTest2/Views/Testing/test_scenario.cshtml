        @helper secondsRow(int rowCount,dynamic item)
        {
        <tr>
            @{
                //int x = rowCount;
                var temp = item.Split('_');
                for (int i = 0; i <= Int32.Parse(temp[2]); i++)
                {
                        if (i == Int32.Parse(temp[2]))
                        {
                            <td>@temp[1]</td>
                            //x = i + 1;
                            break;
                        }
                        else
                        {
                            <td></td>
                        }

                }
             }
        </tr>
        }

        

    <tr>
        @{
            int x = 0;
        }
        @foreach (var item in ViewBag.factors_item)
        {
            var temp = item.Split('_');
            if (x == index)
            {
                @secondsRow(0,item)
            }
            for (int i = x; i <= Int32.Parse(temp[2]); i++)
            {
                if (i == Int32.Parse(temp[2]))
                {
                    <td>@temp[1]</td>
                    x = i + 1;
                    break;
                }
                else
                {
                    <td></td>

                }

            }
        }
    </tr>

